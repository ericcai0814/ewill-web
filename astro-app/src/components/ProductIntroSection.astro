---
export interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  description: string;
  features?: string[];  // 功能列表
  align?: 'center' | 'left';
}

const {
  label,
  title,
  subtitle,
  description,
  features = [],
  align = 'center'
} = Astro.props;

const alignClass = `product-intro--${align}`;
---

<section class:list={['product-intro', alignClass]}>
  <div class="product-intro__container">
    <div class="product-intro__content">
      {label && <span class="product-intro__label">{label}</span>}
      <h2 class="product-intro__title">{title}</h2>
      {subtitle && <p class="product-intro__subtitle">{subtitle}</p>}
      <div class="product-intro__description" set:html={description} />

      {features.length > 0 && (
        <ul class="product-intro__features">
          {features.map((feature) => (
            <li class="product-intro__feature">
              <svg class="product-intro__check" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" fill="#3F8696" opacity="0.1"/>
                <path d="M8 12l3 3 5-5" stroke="#3F8696" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </div>
</section>

<style>
  .product-intro {
    padding: 80px 0;
  }

  .product-intro__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .product-intro__content {
    max-width: 900px;
  }

  /* Alignment */
  .product-intro--center .product-intro__content {
    margin: 0 auto;
    text-align: center;
  }

  .product-intro--left .product-intro__content {
    text-align: left;
  }

  .product-intro__label {
    display: inline-block;
    font-size: 14px;
    font-weight: 600;
    color: #3F8696;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
    padding: 6px 16px;
    background: rgba(63, 134, 150, 0.1);
    border-radius: 20px;
  }

  .product-intro__title {
    font-size: 42px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .product-intro__subtitle {
    font-size: 20px;
    color: #3F8696;
    font-weight: 500;
    margin: 0 0 24px;
    line-height: 1.4;
  }

  .product-intro__description {
    font-size: 18px;
    color: #666;
    line-height: 1.8;
  }

  .product-intro__description :global(p) {
    margin: 0 0 16px;
  }

  .product-intro__description :global(p:last-child) {
    margin-bottom: 0;
  }

  .product-intro__features {
    list-style: none;
    margin: 32px 0 0;
    padding: 0;
    display: grid;
    gap: 12px;
  }

  .product-intro--center .product-intro__features {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    text-align: left;
  }

  .product-intro__feature {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 16px;
    color: #333;
  }

  .product-intro__check {
    flex-shrink: 0;
  }

  /* Mobile adjustments */
  @media (max-width: 1023px) {
    .product-intro {
      padding: 60px 0;
    }

    .product-intro__container {
      padding: 0 16px;
    }

    .product-intro__title {
      font-size: 32px;
    }

    .product-intro__subtitle {
      font-size: 18px;
    }

    .product-intro__description {
      font-size: 16px;
    }

    .product-intro__feature {
      font-size: 15px;
    }
  }
</style>
