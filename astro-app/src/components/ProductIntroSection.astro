---
export interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  description: string;
  features?: string[];  // 功能列表
  align?: 'center' | 'left';
}

const {
  label,
  title,
  subtitle,
  description,
  features = [],
  align = 'center'
} = Astro.props;

const alignClass = align === 'center' ? 'mx-auto text-center' : 'text-left';
---

<!-- Vitesse Style: Clean product intro -->
<section class="py-12 md:py-16">
  <div class="container-wide">
    <div class:list={['max-w-3xl', alignClass]}>
      {label && (
        <span class="inline-block text-xs font-medium text-[var(--accent)] uppercase tracking-wider mb-4">
          {label}
        </span>
      )}
      <h2 class="text-2xl md:text-3xl font-semibold text-[var(--text-primary)] mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-lg text-[var(--accent)] font-medium mb-4">
          {subtitle}
        </p>
      )}
      <div
        class="text-[var(--text-secondary)] leading-relaxed [&_p]:mb-4 [&_p:last-child]:mb-0"
        set:html={description}
      />

      {features.length > 0 && (
        <ul class:list={[
          'list-none mt-6 p-0 grid gap-2',
          align === 'center' && 'max-w-xl mx-auto text-left'
        ]}>
          {features.map((feature) => (
            <li class="flex items-center gap-3 text-sm text-[var(--text-primary)]">
              <svg class="shrink-0 text-[var(--accent)]" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12l5 5L20 7"/>
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </div>
</section>
