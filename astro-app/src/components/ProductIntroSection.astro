---
import { cn } from '../utils/cn';

export interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  description: string;
  features?: string[];  // 功能列表
  align?: 'center' | 'left';
}

const {
  label,
  title,
  subtitle,
  description,
  features = [],
  align = 'center'
} = Astro.props;
---

<section class="py-20 max-lg:py-[60px]">
  <div class="max-w-[1280px] mx-auto px-6 max-lg:px-4">
    <div class={cn(
      'max-w-[900px]',
      align === 'center' ? 'mx-auto text-center' : 'text-left'
    )}>
      {label && (
        <span class="inline-block text-sm font-semibold text-brand uppercase tracking-[0.1em]
                     mb-4 px-4 py-1.5 bg-brand/10 rounded-[20px]">
          {label}
        </span>
      )}
      <h2 class="text-[42px] max-lg:text-[32px] font-bold text-primary dark:text-white mb-4 leading-tight">
        {title}
      </h2>
      {subtitle && (
        <p class="text-xl max-lg:text-lg text-brand font-medium mb-6 leading-relaxed">
          {subtitle}
        </p>
      )}
      <div
        class="text-lg max-lg:text-base text-secondary dark:text-gray-300 leading-relaxed
               [&_p]:mb-4 [&_p:last-child]:mb-0"
        set:html={description}
      />

      {features.length > 0 && (
        <ul class={cn(
          'list-none mt-8 p-0 grid gap-3',
          align === 'center' && 'max-w-[600px] mx-auto text-left'
        )}>
          {features.map((feature) => (
            <li class="flex items-center gap-3 text-base max-lg:text-[15px] text-primary dark:text-gray-200">
              <svg class="shrink-0" width="20" height="20" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" class="fill-brand/10"/>
                <path d="M8 12l3 3 5-5" class="stroke-brand" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </div>
</section>
