---
export interface Props {
  image: {
    desktop: string;
    mobile: string;
    alt: string;
  };
  link: string;
  trigger?: 'first_visit' | 'scroll' | 'time';
  delay?: number;  // ms, for 'time' trigger
}

const { image, link, trigger = 'first_visit', delay = 3000 } = Astro.props;
---

<!-- Vitesse Style: Clean popup modal -->
<div
  class="popup-modal fixed inset-0 z-[2000] hidden items-center justify-center p-6"
  id="popup-modal"
  data-trigger={trigger}
  data-delay={delay}
  aria-hidden="true"
  role="dialog"
  aria-modal="true"
  aria-label="促銷彈窗"
>
  <div class="absolute inset-0 bg-black/80 cursor-pointer" id="popup-overlay"></div>
  <div class="popup-content relative w-[492px] max-w-[calc(100vw-48px)] max-h-[calc(100vh-48px)] overflow-hidden rounded-md">
    <button
      class="absolute top-3 right-3 w-9 h-9 flex items-center justify-center
             bg-transparent border-none cursor-pointer text-white/60
             hover:text-white transition-colors z-10"
      id="popup-close"
      aria-label="關閉彈窗"
    >
      <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <a href={link} class="block w-full h-full" target="_blank" rel="noopener noreferrer">
      <picture class="block w-full h-full">
        <source media="(min-width: 768px)" srcset={image.desktop} />
        <source media="(max-width: 1023px)" srcset={image.mobile} />
        <img
          src={image.desktop}
          alt={image.alt}
          class="block w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </picture>
    </a>
  </div>
</div>

<style>
  .popup-modal.is-open {
    display: flex;
  }

  .popup-content {
    aspect-ratio: 492 / 663;
    animation: popup-enter 0.2s ease-out;
  }

  @keyframes popup-enter {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 921px) {
    .popup-content {
      width: 460px;
    }
  }

  @media (max-width: 544px) {
    .popup-content {
      width: 360px;
    }
  }
</style>

<script>
  const STORAGE_KEY = 'site_popup_dismissed';

  function initPopupModal() {
    const modal = document.getElementById('popup-modal');
    const overlay = document.getElementById('popup-overlay');
    const closeBtn = document.getElementById('popup-close');

    if (!modal) return;

    const trigger = modal.dataset.trigger || 'first_visit';
    const delay = parseInt(modal.dataset.delay || '3000', 10);

    function showModal() {
      modal.classList.add('is-open');
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    function hideModal() {
      modal.classList.remove('is-open');
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      // 記錄已關閉
      try {
        localStorage.setItem(STORAGE_KEY, 'true');
      } catch (e) {
        // localStorage 可能被禁用
      }
    }

    function shouldShow(): boolean {
      try {
        return localStorage.getItem(STORAGE_KEY) !== 'true';
      } catch (e) {
        return false; // localStorage 禁用時不顯示
      }
    }

    // 綁定關閉事件
    closeBtn?.addEventListener('click', hideModal);
    overlay?.addEventListener('click', hideModal);

    // ESC 鍵關閉
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-open')) {
        hideModal();
      }
    });

    // 根據 trigger 類型決定顯示時機
    if (!shouldShow()) return;

    switch (trigger) {
      case 'first_visit':
        // 頁面載入後短暫延遲顯示
        setTimeout(showModal, 500);
        break;

      case 'scroll':
        // 滾動到頁面 30% 時顯示
        let scrollTriggered = false;
        window.addEventListener('scroll', () => {
          if (scrollTriggered) return;
          const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
          if (scrollPercent >= 30) {
            scrollTriggered = true;
            showModal();
          }
        });
        break;

      case 'time':
        // 指定延遲後顯示
        setTimeout(showModal, delay);
        break;
    }
  }

  // DOM 載入後初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPopupModal);
  } else {
    initPopupModal();
  }
</script>
