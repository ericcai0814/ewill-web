---
import { getAssetById } from '../utils/content';

export interface GalleryImage {
  id: string;
  image_id: string;
  title?: string;
  caption?: string;
}

export interface Props {
  label?: string;
  title?: string;
  description?: string;
  columns?: 2 | 3 | 4;
  gap?: 'small' | 'medium' | 'large';
  images: GalleryImage[];
  lightbox?: boolean;
}

const {
  label,
  title,
  description,
  columns = 3,
  gap = 'medium',
  images,
  lightbox = true
} = Astro.props;

// 解析所有圖片
const imagesWithAssets = await Promise.all(
  images.map(async (item) => {
    const asset = await getAssetById(item.image_id);
    return {
      ...item,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);

const columnClass = `gallery--cols-${columns}`;
const gapClass = `gallery--gap-${gap}`;
---

<section class="gallery-section">
  <div class="gallery-section__container">
    <!-- Section Header -->
    {(label || title || description) && (
      <header class="gallery-section__header">
        {label && <span class="gallery-section__label">{label}</span>}
        {title && <h2 class="gallery-section__title">{title}</h2>}
        {description && <p class="gallery-section__description">{description}</p>}
      </header>
    )}

    <!-- Gallery Grid -->
    <div class:list={['gallery', columnClass, gapClass]} data-lightbox={lightbox}>
      {imagesWithAssets.map((item) => item.image && (
        <figure class="gallery-item" data-gallery-id={item.id}>
          <div class="gallery-item__image-wrapper">
            <picture class="gallery-item__picture">
              <source media="(min-width: 1024px)" srcset={item.image.desktop} />
              <source media="(max-width: 1023px)" srcset={item.image.mobile} />
              <img
                src={item.image.desktop}
                alt={item.image.alt}
                class="gallery-item__image"
                loading="lazy"
                decoding="async"
              />
            </picture>
            {lightbox && (
              <button
                class="gallery-item__zoom"
                data-src={item.image.desktop}
                data-alt={item.image.alt}
                aria-label="放大檢視"
              >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="11" cy="11" r="8"/>
                  <path d="M21 21l-4.35-4.35"/>
                  <path d="M11 8v6M8 11h6"/>
                </svg>
              </button>
            )}
          </div>
          {(item.title || item.caption) && (
            <figcaption class="gallery-item__caption">
              {item.title && <h3 class="gallery-item__title">{item.title}</h3>}
              {item.caption && <p class="gallery-item__text">{item.caption}</p>}
            </figcaption>
          )}
        </figure>
      ))}
    </div>
  </div>
</section>

<!-- Lightbox Modal -->
{lightbox && (
  <div class="lightbox" id="gallery-lightbox" aria-hidden="true" role="dialog" aria-modal="true">
    <div class="lightbox__overlay"></div>
    <div class="lightbox__content">
      <button class="lightbox__close" aria-label="關閉">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
      <img class="lightbox__image" src="" alt="" />
    </div>
  </div>
)}

<style>
  .gallery-section {
    padding: 80px 0;
  }

  .gallery-section__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .gallery-section__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .gallery-section__label {
    display: inline-block;
    font-size: 14px;
    font-weight: 600;
    color: #3F8696;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 12px;
  }

  .gallery-section__title {
    font-size: 36px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .gallery-section__description {
    font-size: 18px;
    color: #666;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  /* Gallery Grid */
  .gallery {
    display: grid;
  }

  .gallery--cols-2 { grid-template-columns: repeat(1, 1fr); }
  .gallery--cols-3 { grid-template-columns: repeat(1, 1fr); }
  .gallery--cols-4 { grid-template-columns: repeat(2, 1fr); }

  @media (min-width: 768px) {
    .gallery--cols-2 { grid-template-columns: repeat(2, 1fr); }
    .gallery--cols-3 { grid-template-columns: repeat(2, 1fr); }
    .gallery--cols-4 { grid-template-columns: repeat(3, 1fr); }
  }

  @media (min-width: 1024px) {
    .gallery--cols-2 { grid-template-columns: repeat(2, 1fr); }
    .gallery--cols-3 { grid-template-columns: repeat(3, 1fr); }
    .gallery--cols-4 { grid-template-columns: repeat(4, 1fr); }
  }

  .gallery--gap-small { gap: 12px; }
  .gallery--gap-medium { gap: 24px; }
  .gallery--gap-large { gap: 32px; }

  /* Gallery Item */
  .gallery-item {
    margin: 0;
  }

  .gallery-item__image-wrapper {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: 12px;
    background: #f5f5f5;
  }

  .gallery-item__picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .gallery-item__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-item__image {
    transform: scale(1.05);
  }

  .gallery-item__zoom {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    color: #3F8696;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .gallery-item:hover .gallery-item__zoom {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }

  .gallery-item__zoom:hover {
    background: #3F8696;
    color: #fff;
  }

  .gallery-item__caption {
    padding: 16px 0;
    text-align: center;
  }

  .gallery-item__title {
    font-size: 16px;
    font-weight: 600;
    color: #1A1A2E;
    margin: 0 0 4px;
  }

  .gallery-item__text {
    font-size: 14px;
    color: #666;
    margin: 0;
  }

  /* Lightbox */
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 3000;
    align-items: center;
    justify-content: center;
  }

  .lightbox.is-open {
    display: flex;
  }

  .lightbox__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.9);
  }

  .lightbox__content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
  }

  .lightbox__close {
    position: absolute;
    top: -48px;
    right: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .lightbox__close:hover {
    transform: scale(1.1);
  }

  .lightbox__image {
    display: block;
    max-width: 100%;
    max-height: 85vh;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  /* Mobile adjustments */
  @media (max-width: 1023px) {
    .gallery-section {
      padding: 60px 0;
    }

    .gallery-section__container {
      padding: 0 16px;
    }

    .gallery-section__header {
      margin-bottom: 32px;
    }

    .gallery-section__title {
      font-size: 28px;
    }

    .gallery-item__zoom {
      width: 48px;
      height: 48px;
    }
  }
</style>

<script>
  function initGalleryLightbox() {
    const lightbox = document.getElementById('gallery-lightbox');
    const lightboxImage = lightbox?.querySelector('.lightbox__image') as HTMLImageElement;
    const closeBtn = lightbox?.querySelector('.lightbox__close');
    const overlay = lightbox?.querySelector('.lightbox__overlay');

    if (!lightbox || !lightboxImage) return;

    // 綁定所有放大按鈕
    document.querySelectorAll('.gallery-item__zoom').forEach((btn) => {
      btn.addEventListener('click', () => {
        const src = btn.getAttribute('data-src');
        const alt = btn.getAttribute('data-alt');
        if (src) {
          lightboxImage.src = src;
          lightboxImage.alt = alt || '';
          lightbox.classList.add('is-open');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    function closeLightbox() {
      lightbox.classList.remove('is-open');
      document.body.style.overflow = '';
      lightboxImage.src = '';
    }

    closeBtn?.addEventListener('click', closeLightbox);
    overlay?.addEventListener('click', closeLightbox);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && lightbox.classList.contains('is-open')) {
        closeLightbox();
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initGalleryLightbox);
  } else {
    initGalleryLightbox();
  }
</script>
