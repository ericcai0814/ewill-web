---
import { getAssetById } from '../utils/content';

export interface TimelineEvent {
  id: string;
  year: string;
  title: string;
  description?: string;
  image_id?: string;
}

export interface Props {
  label?: string;
  title: string;
  description?: string;
  events: TimelineEvent[];
  layout?: 'vertical' | 'horizontal';
}

const {
  label,
  title,
  description,
  events,
  layout = 'vertical'
} = Astro.props;

// 解析所有 event 的圖片
const eventsWithImages = await Promise.all(
  events.map(async (event) => {
    let image = null;
    if (event.image_id) {
      const asset = await getAssetById(event.image_id);
      if (asset) {
        image = {
          src: asset.variants.desktop,
          alt: asset.alt
        };
      }
    }
    return { ...event, image };
  })
);

const layoutClass = `timeline--${layout}`;
---

<section class="timeline-section">
  <div class="timeline-section__container">
    <!-- Section Header -->
    <header class="timeline-section__header">
      {label && <span class="timeline-section__label">{label}</span>}
      <h2 class="timeline-section__title">{title}</h2>
      {description && <p class="timeline-section__description">{description}</p>}
    </header>

    <!-- Timeline -->
    <div class:list={['timeline', layoutClass]}>
      <div class="timeline__line" aria-hidden="true"></div>
      {eventsWithImages.map((event, index) => (
        <article
          class="timeline-event"
          data-event-id={event.id}
          style={`--event-index: ${index}`}
        >
          <div class="timeline-event__marker">
            <span class="timeline-event__year">{event.year}</span>
          </div>
          <div class="timeline-event__content">
            {event.image && (
              <div class="timeline-event__image-wrapper">
                <img
                  src={event.image.src}
                  alt={event.image.alt}
                  class="timeline-event__image"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}
            <div class="timeline-event__text">
              <h3 class="timeline-event__title">{event.title}</h3>
              {event.description && (
                <p class="timeline-event__description">{event.description}</p>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .timeline-section {
    padding: 80px 0;
    background: #f8f9fa;
  }

  .timeline-section__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .timeline-section__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .timeline-section__label {
    display: inline-block;
    font-size: 14px;
    font-weight: 600;
    color: #3F8696;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 12px;
  }

  .timeline-section__title {
    font-size: 36px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .timeline-section__description {
    font-size: 18px;
    color: #666;
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  /* Timeline Container */
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .timeline__line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #3F8696, #2D9B9B);
    transform: translateX(-50%);
  }

  /* Timeline Event */
  .timeline-event {
    position: relative;
    display: flex;
    margin-bottom: 48px;
  }

  .timeline-event:last-child {
    margin-bottom: 0;
  }

  .timeline-event:nth-child(odd) {
    flex-direction: row;
    padding-right: calc(50% + 40px);
  }

  .timeline-event:nth-child(even) {
    flex-direction: row-reverse;
    padding-left: calc(50% + 40px);
  }

  .timeline-event__marker {
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    z-index: 2;
  }

  .timeline-event__year {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #3F8696 0%, #2D9B9B 100%);
    color: #fff;
    font-size: 18px;
    font-weight: 700;
    border-radius: 50%;
    box-shadow: 0 4px 20px rgba(63, 134, 150, 0.3);
  }

  .timeline-event__content {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    width: 100%;
  }

  .timeline-event__content:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .timeline-event__image-wrapper {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f5f5f5;
  }

  .timeline-event__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .timeline-event__text {
    padding: 24px;
  }

  .timeline-event__title {
    font-size: 20px;
    font-weight: 600;
    color: #1A1A2E;
    margin: 0 0 8px;
    line-height: 1.4;
  }

  .timeline-event__description {
    font-size: 14px;
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  /* Horizontal Layout */
  .timeline--horizontal {
    display: flex;
    overflow-x: auto;
    gap: 24px;
    padding: 20px 0;
    max-width: none;
  }

  .timeline--horizontal .timeline__line {
    top: 40px;
    left: 0;
    right: 0;
    bottom: auto;
    width: auto;
    height: 2px;
    transform: none;
  }

  .timeline--horizontal .timeline-event {
    flex-direction: column;
    flex-shrink: 0;
    width: 280px;
    margin-bottom: 0;
    padding: 0;
  }

  .timeline--horizontal .timeline-event:nth-child(odd),
  .timeline--horizontal .timeline-event:nth-child(even) {
    flex-direction: column;
    padding: 0;
  }

  .timeline--horizontal .timeline-event__marker {
    position: relative;
    left: auto;
    top: auto;
    transform: none;
    margin-bottom: 24px;
  }

  .timeline--horizontal .timeline-event__year {
    width: 64px;
    height: 64px;
    font-size: 16px;
  }

  /* Mobile adjustments */
  @media (max-width: 1023px) {
    .timeline-section {
      padding: 60px 0;
    }

    .timeline-section__container {
      padding: 0 16px;
    }

    .timeline-section__header {
      margin-bottom: 40px;
    }

    .timeline-section__title {
      font-size: 28px;
    }

    .timeline__line {
      left: 40px;
    }

    .timeline-event {
      flex-direction: column !important;
      padding: 0 0 0 100px !important;
      margin-bottom: 32px;
    }

    .timeline-event__marker {
      left: 40px;
      transform: translateX(-50%);
    }

    .timeline-event__year {
      width: 60px;
      height: 60px;
      font-size: 14px;
    }

    .timeline-event__text {
      padding: 20px;
    }

    .timeline-event__title {
      font-size: 18px;
    }
  }
</style>
