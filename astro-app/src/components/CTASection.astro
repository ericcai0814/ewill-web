---
export interface Props {
  title: string;
  description?: string;
  button_text: string;
  button_link: string;
  variant?: 'primary' | 'secondary' | 'dark';
  align?: 'center' | 'left';
}

const {
  title,
  description,
  button_text,
  button_link,
  variant = 'primary',
  align = 'center'
} = Astro.props;

// Vitesse Style: Simple background variants (no gradients)
const bgClass = {
  primary: 'bg-[var(--bg-secondary)]',
  secondary: 'bg-[var(--bg-primary)] border-y border-[var(--border-color)]',
  dark: 'bg-[var(--bg-tertiary)]'
}[variant];

// Text colors
const titleClass = 'text-[var(--text-primary)]';
const descClass = 'text-[var(--text-secondary)]';

// Button style based on variant
const btnClass = {
  primary: 'btn btn-primary',
  secondary: 'btn btn-secondary',
  dark: 'btn btn-primary'
}[variant];

const alignClass = align === 'center' ? 'text-center mx-auto' : 'text-left';
---

<!-- Vitesse Style: Clean CTA, no gradients -->
<section class={`py-12 md:py-16 ${bgClass}`}>
  <div class="container-wide">
    <div class={`max-w-2xl ${alignClass}`}>
      <h2 class={`text-xl md:text-2xl font-semibold mb-3 ${titleClass}`}>
        {title}
      </h2>
      {description && (
        <p class={`text-base mb-6 ${descClass}`}>
          {description}
        </p>
      )}
      <a href={button_link} class={btnClass}>
        {button_text}
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
