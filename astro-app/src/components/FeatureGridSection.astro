---
import { getAssetById } from '../utils/content';
import { cn } from '../utils/cn';

export interface Feature {
  id: string;
  image_id?: string;
  icon?: string;  // SVG icon string or icon name
  title: string;
  subtitle?: string;
  description: string;
}

export interface Props {
  label?: string;
  title?: string;
  columns?: 3 | 4;
  variant?: 'default' | 'icon' | 'minimal';
  features: Feature[];
}

const {
  label,
  title,
  columns = 3,
  variant = 'default',
  features
} = Astro.props;

// 解析所有 feature 的圖片
const featuresWithImages = await Promise.all(
  features.map(async (feature) => {
    let image = null;
    if (feature.image_id) {
      const asset = await getAssetById(feature.image_id);
      if (asset) {
        image = {
          desktop: asset.variants.desktop,
          mobile: asset.variants.mobile,
          alt: asset.alt
        };
      }
    }
    return { ...feature, image };
  })
);

// Grid columns class
const gridCols = {
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4'
}[columns];

// Variant classes
const isMinimal = variant === 'minimal';
const isIcon = variant === 'icon';
---

<section class="py-20 max-lg:py-[60px] bg-secondary dark:bg-dark-800">
  <div class="max-w-[1280px] mx-auto px-6 max-lg:px-4">
    <!-- Section Header -->
    {(label || title) && (
      <header class="text-center mb-12 max-lg:mb-8">
        {label && (
          <span class="inline-block text-sm font-semibold text-brand uppercase tracking-[0.1em] mb-3">
            {label}
          </span>
        )}
        {title && (
          <h2 class="text-4xl max-lg:text-[28px] font-bold text-primary dark:text-white m-0 leading-tight">
            {title}
          </h2>
        )}
      </header>
    )}

    <!-- Features Grid -->
    <div class={cn('grid grid-cols-1 gap-6', gridCols)}>
      {featuresWithImages.map((feature) => (
        <article
          class={cn(
            'text-center transition-all duration-300',
            isMinimal
              ? 'bg-transparent p-6 px-4'
              : 'bg-primary dark:bg-dark-700 rounded-xl p-8 max-lg:p-6 shadow-card hover:-translate-y-1 hover:shadow-card-hover'
          )}
          data-feature-id={feature.id}
        >
          {feature.image && (
            <div class="w-20 h-20 mx-auto mb-5 flex items-center justify-center">
              <img
                src={feature.image.desktop}
                alt={feature.image.alt}
                class="max-w-full max-h-full object-contain"
                loading="lazy"
                decoding="async"
              />
            </div>
          )}
          {feature.icon && !feature.image && (
            <div
              class={cn(
                'mx-auto mb-5 flex items-center justify-center bg-gradient-to-br from-brand to-brand-hover rounded-2xl text-white [&_svg]:w-8 [&_svg]:h-8',
                isIcon ? 'w-14 h-14 rounded-xl' : 'w-16 h-16'
              )}
              set:html={feature.icon}
            />
          )}
          <div>
            <h3 class={cn(
              'font-semibold text-primary dark:text-white mb-2 leading-relaxed',
              isIcon ? 'text-lg' : 'text-xl max-lg:text-lg'
            )}>
              {feature.title}
            </h3>
            {feature.subtitle && (
              <span class="block text-sm text-brand font-medium mb-3">
                {feature.subtitle}
              </span>
            )}
            <p class="text-sm text-secondary dark:text-gray-400 m-0 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
