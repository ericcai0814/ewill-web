---
import { getAssetById } from '../utils/content';

export interface Feature {
  id: string;
  image_id?: string;
  icon?: string;  // SVG icon string or icon name
  title: string;
  subtitle?: string;
  description: string;
}

export interface Props {
  label?: string;
  title?: string;
  columns?: 3 | 4;
  variant?: 'default' | 'icon' | 'minimal';
  features: Feature[];
}

const {
  label,
  title,
  columns = 3,
  variant = 'default',
  features
} = Astro.props;

// 解析所有 feature 的圖片
const featuresWithImages = await Promise.all(
  features.map(async (feature) => {
    let image = null;
    if (feature.image_id) {
      const asset = await getAssetById(feature.image_id);
      if (asset) {
        image = {
          desktop: asset.variants.desktop,
          mobile: asset.variants.mobile,
          alt: asset.alt
        };
      }
    }
    return { ...feature, image };
  })
);

// Grid columns class
const gridCols = {
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4'
}[columns];

// Variant classes
const isMinimal = variant === 'minimal';
const isIcon = variant === 'icon';
---

<!-- Vitesse Style: Clean feature grid, no heavy shadows -->
<section class="py-12 md:py-16 bg-[var(--bg-secondary)]">
  <div class="container-wide">
    <!-- Section Header -->
    {(label || title) && (
      <header class="text-center mb-10">
        {label && (
          <span class="inline-block text-xs font-medium text-[var(--accent)] uppercase tracking-wider mb-3">
            {label}
          </span>
        )}
        {title && (
          <h2 class="text-2xl md:text-3xl font-semibold text-[var(--text-primary)]">
            {title}
          </h2>
        )}
      </header>
    )}

    <!-- Features Grid -->
    <div class:list={['grid grid-cols-1 gap-6', gridCols]}>
      {featuresWithImages.map((feature) => (
        <article
          class:list={[
            'text-center transition-all duration-200',
            isMinimal
              ? 'bg-transparent p-6'
              : 'card-filled p-6 hover:border-[var(--accent)]'
          ]}
          data-feature-id={feature.id}
        >
          {feature.image && (
            <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center">
              <img
                src={feature.image.desktop}
                alt={feature.image.alt}
                class="max-w-full max-h-full object-contain"
                loading="lazy"
                decoding="async"
              />
            </div>
          )}
          {feature.icon && !feature.image && (
            <div
              class:list={[
                'mx-auto mb-4 flex items-center justify-center bg-[var(--accent)] rounded-lg text-white [&_svg]:w-6 [&_svg]:h-6',
                isIcon ? 'w-12 h-12' : 'w-14 h-14'
              ]}
              set:html={feature.icon}
            />
          )}
          <div>
            <h3 class:list={[
              'font-semibold text-[var(--text-primary)] mb-2',
              isIcon ? 'text-base' : 'text-lg'
            ]}>
              {feature.title}
            </h3>
            {feature.subtitle && (
              <span class="block text-sm text-[var(--accent)] font-medium mb-2">
                {feature.subtitle}
              </span>
            )}
            <p class="text-sm text-[var(--text-secondary)] m-0">
              {feature.description}
            </p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
