---
import { getAssetById } from '../utils/content';
import type { CardItem } from '../types';

/**
 * CardListSection
 * 卡片列表區塊，支援 3/4/5 欄及特殊佈局
 */
export interface Props {
  /** 小標籤（通常為英文） */
  label?: string;
  /** 標題 */
  title: string;
  /** 描述文字 */
  description?: string;
  /** 欄數 @default 3 */
  columns?: 3 | 4 | 5;
  /** 佈局變體 @default 'equal' */
  layout_variant?: '3-2' | 'equal';
  /** 卡片清單 */
  cards: CardItem[];
}

const {
  label,
  title,
  description,
  columns = 3,
  layout_variant = 'equal',
  cards
} = Astro.props;

// 解析所有卡片的圖片
const cardsWithImages = await Promise.all(
  cards.map(async (card) => {
    const asset = await getAssetById(card.image_id);
    return {
      ...card,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);

// Grid columns class
const gridCols = {
  3: 'sm:grid-cols-2 lg:grid-cols-3',
  4: 'sm:grid-cols-2 lg:grid-cols-4',
  5: 'sm:grid-cols-2 lg:grid-cols-5'
}[columns];

const is32Variant = columns === 5 && layout_variant === '3-2';
---

<!-- Vitesse Style: Minimal cards, no heavy shadows -->
<section class="py-12 md:py-16">
  <div class="container-wide">
    <!-- Section Header -->
    <header class="mb-10">
      {label && (
        <span class="inline-block text-xs font-medium text-[var(--accent)] uppercase tracking-wider mb-3">
          {label}
        </span>
      )}
      <h2 class="text-2xl md:text-3xl font-semibold text-[var(--text-primary)] mb-3">
        {title}
      </h2>
      {description && (
        <p class="text-[var(--text-secondary)] max-w-2xl">
          {description}
        </p>
      )}
    </header>

    <!-- Cards Grid -->
    <div class:list={[
      'grid grid-cols-1 gap-6',
      is32Variant ? 'lg:grid-cols-6' : gridCols
    ]}>
      {cardsWithImages.map((card, index) => (
        <article
          class:list={[
            'card-filled group transition-all duration-200',
            'hover:border hover:border-[var(--accent)]',
            is32Variant && index < 3 && 'lg:col-span-2',
            is32Variant && index === 3 && 'lg:col-[2/span_2]',
            is32Variant && index === 4 && 'lg:col-[4/span_2]'
          ]}
          data-card-id={card.id}
        >
          {card.image && (
            <div class="relative overflow-hidden aspect-[16/10] rounded-md mb-4 bg-[var(--bg-tertiary)]">
              <picture class="block w-full h-full">
                <source media="(min-width: 768px)" srcset={card.image.desktop} />
                <source media="(max-width: 1023px)" srcset={card.image.mobile} />
                <img
                  src={card.image.desktop}
                  alt={card.image.alt}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            </div>
          )}
          <div>
            <h3 class="text-base font-semibold text-[var(--text-primary)] mb-2">
              {card.title}
            </h3>
            <p class="text-sm text-[var(--text-secondary)] mb-3 line-clamp-3">
              {card.description}
            </p>
            {card.link && (
              <a
                href={card.link}
                class="inline-flex items-center gap-1 text-sm font-medium text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors"
              >
                {card.link_text || '了解更多'}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
