---
import { getAssetById } from '../utils/content';

export interface Card {
  id: string;
  image_id: string;
  title: string;
  description: string;
  link?: string;
  link_text?: string;
}

export interface Props {
  label?: string;
  title: string;
  description?: string;
  columns?: 3 | 4 | 5;
  layout_variant?: '3-2' | 'equal';  // 5 cards: 3+2 或平均
  cards: Card[];
}

const {
  label,
  title,
  description,
  columns = 3,
  layout_variant = 'equal',
  cards
} = Astro.props;

// 解析所有卡片的圖片
const cardsWithImages = await Promise.all(
  cards.map(async (card) => {
    const asset = await getAssetById(card.image_id);
    return {
      ...card,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);

// Grid columns class
const gridCols = {
  3: 'min-[545px]:grid-cols-2 min-[922px]:grid-cols-3',
  4: 'min-[545px]:grid-cols-2 min-[922px]:grid-cols-4',
  5: 'min-[545px]:grid-cols-2 min-[922px]:grid-cols-5'
}[columns];

const is32Variant = columns === 5 && layout_variant === '3-2';
---

<section class="py-20 max-[921px]:py-[60px] max-[544px]:py-10">
  <div class="max-w-[1280px] mx-auto px-6 max-[921px]:px-8 max-[544px]:px-4">
    <!-- Section Header -->
    <header class="text-center mb-12 max-[921px]:mb-8">
      {label && (
        <span class="inline-block text-[13px] font-semibold text-brand uppercase tracking-[0.15em]
                     mb-4 px-5 py-2 border border-brand rounded-[20px]">
          {label}
        </span>
      )}
      <h2 class="text-4xl max-[921px]:text-[28px] max-[544px]:text-2xl font-bold text-brand mb-4 leading-tight">
        {title}
      </h2>
      {description && (
        <p class="text-lg max-[921px]:text-base text-secondary dark:text-gray-300 m-0 max-w-[700px] mx-auto leading-relaxed">
          {description}
        </p>
      )}
    </header>

    <!-- Cards Grid -->
    <div class:list={[
      'grid grid-cols-1 gap-6',
      is32Variant ? 'min-[922px]:grid-cols-6' : gridCols
    ]}>
      {cardsWithImages.map((card, index) => (
        <article
          class:list={[
            'bg-[#EEF9F9] dark:bg-dark-700 rounded-[5px] overflow-hidden p-[15px] transition-all duration-300 flex flex-col',
            'hover:shadow-[0_4px_12px_rgba(0,0,0,0.08)]',
            is32Variant && index < 3 && 'min-[922px]:col-span-2',
            is32Variant && index === 3 && 'min-[922px]:col-[2/span_2]',
            is32Variant && index === 4 && 'min-[922px]:col-[4/span_2]'
          ]}
          data-card-id={card.id}
        >
          {card.image && (
            <div class="relative overflow-hidden aspect-[4/3] bg-[#e0f0f0] dark:bg-dark-600 rounded-lg mb-2.5">
              <picture class="block w-full h-full">
                <source media="(min-width: 1024px)" srcset={card.image.desktop} />
                <source media="(max-width: 1023px)" srcset={card.image.mobile} />
                <img
                  src={card.image.desktop}
                  alt={card.image.alt}
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-[1.02]"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            </div>
          )}
          <div class="p-2.5 pt-2.5 pb-1.5">
            <h3 class="text-xl max-[921px]:text-lg font-semibold text-primary dark:text-white mb-3 leading-relaxed">
              {card.title}
            </h3>
            <p class="text-sm text-secondary dark:text-gray-400 mb-4 leading-relaxed line-clamp-3">
              {card.description}
            </p>
            {card.link && (
              <a
                href={card.link}
                class="inline-flex items-center gap-1.5 text-sm font-semibold text-brand no-underline
                       transition-all duration-200 hover:text-brand-hover hover:gap-2.5
                       [&_svg]:transition-transform [&_svg]:duration-200 [&:hover_svg]:translate-x-1"
              >
                {card.link_text || '了解更多'}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
