---
import { getAssetById } from '../utils/content';

export interface AnchorCard {
  id: string;
  image_id: string;
  title: string;
  description: string;
  link?: string;
  link_text?: string;
}

export interface Props {
  id: string;           // 錨點 ID
  title: string;
  description?: string;
  cards: AnchorCard[];
}

const { id, title, description, cards } = Astro.props;

// 解析所有卡片的圖片
const cardsWithImages = await Promise.all(
  cards.map(async (card) => {
    const asset = await getAssetById(card.image_id);
    return {
      ...card,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);
---

<section
  class="py-20 max-lg:py-[60px] scroll-mt-[100px] max-lg:scroll-mt-20 even:bg-secondary dark:even:bg-dark-800"
  id={id}
>
  <div class="max-w-[1280px] mx-auto px-6 max-lg:px-4">
    <!-- Section Header -->
    <header class="text-center mb-12 max-lg:mb-8">
      <h2 class="text-[32px] max-lg:text-[26px] font-bold text-primary dark:text-white mb-4 leading-tight">
        {title}
      </h2>
      {description && (
        <p class="text-lg max-lg:text-base text-secondary dark:text-gray-300 m-0 max-w-[700px] mx-auto leading-relaxed">
          {description}
        </p>
      )}
    </header>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {cardsWithImages.map((card) => (
        <article
          class="bg-primary dark:bg-dark-700 rounded-xl overflow-hidden shadow-card
                 transition-all duration-300 hover:-translate-y-1 hover:shadow-card-hover"
          data-card-id={card.id}
        >
          {card.image && (
            <div class="relative overflow-hidden aspect-[16/10] bg-secondary dark:bg-dark-600">
              <picture class="block w-full h-full">
                <source media="(min-width: 1024px)" srcset={card.image.desktop} />
                <source media="(max-width: 1023px)" srcset={card.image.mobile} />
                <img
                  src={card.image.desktop}
                  alt={card.image.alt}
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            </div>
          )}
          <div class="p-6 max-lg:p-5">
            <h3 class="text-xl max-lg:text-lg font-semibold text-primary dark:text-white mb-3 leading-relaxed">
              {card.title}
            </h3>
            <p class="text-sm text-secondary dark:text-gray-400 mb-4 leading-relaxed line-clamp-3">
              {card.description}
            </p>
            {card.link && (
              <a
                href={card.link}
                class="inline-flex items-center gap-1.5 text-sm font-semibold text-brand no-underline
                       transition-all duration-200 hover:text-brand-hover hover:gap-2.5
                       [&_svg]:transition-transform [&_svg]:duration-200 [&:hover_svg]:translate-x-1"
              >
                {card.link_text || '了解更多'}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
