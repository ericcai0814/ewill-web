---
import { getAssetById } from '../utils/content';

export interface AnchorCard {
  id: string;
  image_id: string;
  title: string;
  description: string;
  link?: string;
  link_text?: string;
}

export interface Props {
  id: string;           // 錨點 ID
  title: string;
  description?: string;
  cards: AnchorCard[];
}

const { id, title, description, cards } = Astro.props;

// 解析所有卡片的圖片
const cardsWithImages = await Promise.all(
  cards.map(async (card) => {
    const asset = await getAssetById(card.image_id);
    return {
      ...card,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);
---

<!-- Vitesse Style: Clean anchor section with minimal cards -->
<section
  class="py-12 md:py-16 scroll-mt-20 even:bg-[var(--bg-secondary)]"
  id={id}
>
  <div class="container-wide">
    <!-- Section Header -->
    <header class="text-center mb-10">
      <h2 class="text-2xl md:text-3xl font-semibold text-[var(--text-primary)] mb-3">
        {title}
      </h2>
      {description && (
        <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">
          {description}
        </p>
      )}
    </header>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {cardsWithImages.map((card) => (
        <article
          class="card-filled group transition-all duration-200 hover:border-[var(--accent)]"
          data-card-id={card.id}
        >
          {card.image && (
            <div class="relative overflow-hidden aspect-[16/10] rounded-md mb-4 bg-[var(--bg-tertiary)]">
              <picture class="block w-full h-full">
                <source media="(min-width: 1024px)" srcset={card.image.desktop} />
                <source media="(max-width: 1023px)" srcset={card.image.mobile} />
                <img
                  src={card.image.desktop}
                  alt={card.image.alt}
                  class="w-full h-full object-cover"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            </div>
          )}
          <div>
            <h3 class="text-base font-semibold text-[var(--text-primary)] mb-2">
              {card.title}
            </h3>
            <p class="text-sm text-[var(--text-secondary)] mb-3 line-clamp-3">
              {card.description}
            </p>
            {card.link && (
              <a
                href={card.link}
                class="inline-flex items-center gap-1 text-sm font-medium text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors"
              >
                {card.link_text || '了解更多'}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
