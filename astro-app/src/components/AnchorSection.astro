---
import { getAssetById } from '../utils/content';

export interface AnchorCard {
  id: string;
  image_id: string;
  title: string;
  description: string;
  link?: string;
  link_text?: string;
}

export interface Props {
  id: string;           // 錨點 ID
  title: string;
  description?: string;
  cards: AnchorCard[];
}

const { id, title, description, cards } = Astro.props;

// 解析所有卡片的圖片
const cardsWithImages = await Promise.all(
  cards.map(async (card) => {
    const asset = await getAssetById(card.image_id);
    return {
      ...card,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);
---

<section class="anchor-section" id={id}>
  <div class="anchor-section__container">
    <!-- Section Header -->
    <header class="anchor-section__header">
      <h2 class="anchor-section__title">{title}</h2>
      {description && <p class="anchor-section__description">{description}</p>}
    </header>

    <!-- Cards Grid -->
    <div class="anchor-section__grid">
      {cardsWithImages.map((card) => (
        <article class="anchor-card" data-card-id={card.id}>
          {card.image && (
            <div class="anchor-card__image-wrapper">
              <picture class="anchor-card__picture">
                <source media="(min-width: 1024px)" srcset={card.image.desktop} />
                <source media="(max-width: 1023px)" srcset={card.image.mobile} />
                <img
                  src={card.image.desktop}
                  alt={card.image.alt}
                  class="anchor-card__image"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            </div>
          )}
          <div class="anchor-card__content">
            <h3 class="anchor-card__title">{card.title}</h3>
            <p class="anchor-card__description">{card.description}</p>
            {card.link && (
              <a href={card.link} class="anchor-card__link">
                {card.link_text || '了解更多'}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .anchor-section {
    padding: 80px 0;
    scroll-margin-top: 100px; /* Header 高度 + 緩衝 */
  }

  .anchor-section:nth-child(even) {
    background: #f8f9fa;
  }

  .anchor-section__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .anchor-section__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .anchor-section__title {
    font-size: 32px;
    font-weight: 700;
    color: #1A1A2E;
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .anchor-section__description {
    font-size: 18px;
    color: #666;
    margin: 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  /* Cards Grid */
  .anchor-section__grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 24px;
  }

  @media (min-width: 768px) {
    .anchor-section__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .anchor-section__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Card Styles */
  .anchor-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
  }

  .anchor-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  }

  .anchor-card__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: #f5f5f5;
  }

  .anchor-card__picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .anchor-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .anchor-card:hover .anchor-card__image {
    transform: scale(1.05);
  }

  .anchor-card__content {
    padding: 24px;
  }

  .anchor-card__title {
    font-size: 20px;
    font-weight: 600;
    color: #1A1A2E;
    margin: 0 0 12px;
    line-height: 1.4;
  }

  .anchor-card__description {
    font-size: 14px;
    color: #666;
    margin: 0 0 16px;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .anchor-card__link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 600;
    color: #3F8696;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .anchor-card__link:hover {
    color: #2D9B9B;
    gap: 10px;
  }

  .anchor-card__link svg {
    transition: transform 0.2s ease;
  }

  .anchor-card__link:hover svg {
    transform: translateX(4px);
  }

  /* Mobile adjustments */
  @media (max-width: 1023px) {
    .anchor-section {
      padding: 60px 0;
      scroll-margin-top: 80px;
    }

    .anchor-section__container {
      padding: 0 16px;
    }

    .anchor-section__header {
      margin-bottom: 32px;
    }

    .anchor-section__title {
      font-size: 26px;
    }

    .anchor-section__description {
      font-size: 16px;
    }

    .anchor-card__content {
      padding: 20px;
    }

    .anchor-card__title {
      font-size: 18px;
    }
  }
</style>
