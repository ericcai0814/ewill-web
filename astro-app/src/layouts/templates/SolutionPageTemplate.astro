---
/**
 * SolutionPageTemplate.astro
 *
 * 解決方案頁面 Template（Apple-like 科技風）
 * 適用：aps, cms_568, mes, scm, wms, smartmanufacturing_ai, solutions 等
 *
 * 設計特點：
 * - 大面積留白
 * - 全幅 Hero 大圖
 * - 優勢網格（Benefit Grid）
 * - 滾動淡入動畫
 *
 * 佈局結構（固定，不依賴 yml.layout.sections）：
 * 1. Hero Banner（全幅大圖）
 * 2. Solution Intro（解決方案介紹）
 * 3. Benefit Grid（核心優勢網格）
 * 4. Feature Showcase（功能展示，左右交錯）
 * 5. CTA（行動呼籲）
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, layout, aio, content } = page;

// Breadcrumb
const breadcrumbItems = aio?.webpage?.breadcrumb?.itemListElement?.map((item: { name: string; item?: string }) => ({
  label: item.name,
  href: item.item
    ? (item.item.startsWith('http') ? new URL(item.item).pathname : item.item)
    : ''
})) || undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  if (aioData.product) items.push({ type: 'Product', data: aioData.product });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// 內容資料提取（向後兼容：優先 content，fallback 到 layout.sections）
// ============================================================================

// Hero
const heroData = content?.hero || layout?.hero;

// Intro（解決方案介紹）
const introData = content?.intro || layout?.sections?.find((s: any) => s.type === 'product_intro');

// Benefits / Feature Grid（核心優勢）
const benefitsData = content?.benefits || layout?.sections?.find((s: any) => s.type === 'feature_grid');

// Features（功能展示）
const featuresRaw = content?.features || layout?.sections?.find((s: any) => s.type === 'feature_showcase')?.features || [];

// CTA
const ctaData = content?.cta || layout?.sections?.find((s: any) => s.type === 'cta');

// 解析 feature 圖片
const featuresWithImages = await Promise.all(
  featuresRaw.map(async (feature: any) => {
    const asset = await getAssetById(feature.image_id);
    return {
      ...feature,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroData?.image ? {
  desktop: heroData.image.desktop,
  mobile: heroData.image.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroData?.image?.desktop) {
    return `${siteUrl}${heroData.image.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();

// SVG Icons for benefits
const benefitIcons = [
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>`,
];
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="solution-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION - 全幅大圖 -->
    <!-- ================================================================== -->
    {heroData?.image && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroData.image.desktop} />
          <source media="(max-width: 767px)" srcset={heroData.image.mobile} />
          <img
            src={heroData.image.desktop}
            alt={heroData.image.alt || seo.title}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        {heroData.overlay && <div class="hero-overlay"></div>}
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. SOLUTION INTRO - 解決方案介紹 -->
    <!-- ================================================================== -->
    {introData && (
      <section class="intro-section fade-in-section">
        <div class="container">
          {introData.label && (
            <span class="intro-label">{introData.label}</span>
          )}
          <h1 class="intro-title">{introData.title}</h1>
          {introData.subtitle && (
            <p class="intro-subtitle">{introData.subtitle}</p>
          )}
          <div class="intro-description" set:html={introData.description} />
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 3. BENEFIT GRID - 核心優勢網格 -->
    <!-- ================================================================== -->
    {benefitsData && benefitsData.features && benefitsData.features.length > 0 && (
      <section class="benefits-section fade-in-section">
        <div class="container-wide">
          {benefitsData.title && (
            <h2 class="benefits-title">{benefitsData.title}</h2>
          )}
          <div class="benefits-grid">
            {benefitsData.features.map((benefit: any, index: number) => (
              <article class="benefit-card" data-benefit-id={benefit.id}>
                <div class="benefit-icon" set:html={benefitIcons[index % benefitIcons.length]} />
                <h3 class="benefit-title">{benefit.title}</h3>
                <p class="benefit-description">{benefit.description}</p>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 4. FEATURE SHOWCASE - 功能展示（左右交錯） -->
    <!-- ================================================================== -->
    {featuresWithImages.length > 0 && (
      <section class="features-section">
        {featuresWithImages.map((feature, index) => (
          <article
            class:list={[
              'feature-item fade-in-section',
              index % 2 === 1 && 'feature-item--reversed'
            ]}
            data-feature-id={feature.id}
          >
            {feature.image && (
              <div class="feature-image-wrapper">
                <picture class="feature-picture">
                  <source media="(min-width: 768px)" srcset={feature.image.desktop} />
                  <source media="(max-width: 767px)" srcset={feature.image.mobile} />
                  <img
                    src={feature.image.desktop}
                    alt={feature.image.alt}
                    class="feature-image"
                    loading="lazy"
                    decoding="async"
                  />
                </picture>
              </div>
            )}
            <div class="feature-content">
              <h2 class="feature-title">{feature.title}</h2>
              <p class="feature-description">{feature.description}</p>
              {feature.bullets && feature.bullets.length > 0 && (
                <ul class="feature-bullets">
                  {feature.bullets.map((bullet: string) => (
                    <li class="feature-bullet">{bullet}</li>
                  ))}
                </ul>
              )}
            </div>
          </article>
        ))}
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 5. CTA SECTION - 行動呼籲 -->
    <!-- ================================================================== -->
    {ctaData && (
      <section class="cta-section fade-in-section">
        <div class="container">
          <h2 class="cta-title">{ctaData.title}</h2>
          {ctaData.description && (
            <p class="cta-description">{ctaData.description}</p>
          )}
          <a href={ctaData.button_link} class="cta-button">
            {ctaData.button_text}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like 科技風樣式 - Solution Template
     ======================================== */

  .solution-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .container-wide {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 56.25vw;
    max-height: 600px;
    min-height: 300px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Intro Section
     ---------------------------------------- */
  .intro-section {
    padding: 80px 0;
    text-align: center;
  }

  .intro-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .intro-title {
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 600;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .intro-subtitle {
    font-size: 21px;
    font-weight: 500;
    color: var(--accent);
    margin: 0 0 24px;
  }

  .intro-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 680px;
    margin: 0 auto;
  }

  .intro-description :global(p) {
    margin: 0 0 16px;
  }

  .intro-description :global(p:last-child) {
    margin-bottom: 0;
  }

  /* ----------------------------------------
     Benefits Section (Grid)
     ---------------------------------------- */
  .benefits-section {
    padding: 80px 0;
    background: var(--bg-secondary);
  }

  .benefits-title {
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 600;
    text-align: center;
    color: var(--text-primary);
    margin: 0 0 48px;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 640px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .benefit-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }

  .benefit-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent);
    border-radius: 12px;
    color: white;
  }

  .benefit-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .benefit-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 12px;
  }

  .benefit-description {
    font-size: 15px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  /* ----------------------------------------
     Features Section
     ---------------------------------------- */
  .features-section {
    padding: 40px 0;
  }

  .feature-item {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 60px 24px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }

  @media (min-width: 768px) {
    .feature-item {
      grid-template-columns: 1fr 1fr;
      gap: 80px;
      padding: 100px 48px;
    }

    .feature-item--reversed {
      direction: rtl;
    }

    .feature-item--reversed > * {
      direction: ltr;
    }
  }

  .feature-image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--bg-tertiary);
    aspect-ratio: 4 / 3;
  }

  .feature-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .feature-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .feature-item:hover .feature-image {
    transform: scale(1.02);
  }

  .feature-content {
    padding: 0;
  }

  .feature-title {
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .feature-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    margin: 0;
  }

  .feature-bullets {
    list-style: none;
    margin: 24px 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature-bullet {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 15px;
    color: var(--text-primary);
  }

  .feature-bullet::before {
    content: '';
    flex-shrink: 0;
    width: 6px;
    height: 6px;
    margin-top: 8px;
    background: var(--accent);
    border-radius: 50%;
  }

  /* ----------------------------------------
     CTA Section
     ---------------------------------------- */
  .cta-section {
    padding: 100px 0;
    text-align: center;
    background: var(--bg-tertiary);
  }

  .cta-title {
    font-size: clamp(24px, 4vw, 40px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover, var(--accent));
    transform: scale(1.02);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode Support
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }

  :global(.dark) .benefit-card {
    background: var(--bg-tertiary);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
