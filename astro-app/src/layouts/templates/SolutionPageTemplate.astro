---
/**
 * SolutionPageTemplate.astro
 *
 * 解決方案頁面 Template（Apple-like 科技風）
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/solution.ts 載入）
 *
 * 固定佈局：
 * 1. Hero Banner（全幅大圖）
 * 2. Intro Section（服務介紹）
 * 3. Flow Image（服務流程圖）
 * 4. Service Sections（anchor sections with cards）
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { SOLUTION_CONTENT } from './content/solution';
import { getSmartManufacturingContent } from './content/smart-manufacturing';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// Breadcrumb - 讓組件根據 URL 自動生成（符合佈局分離原則）
const breadcrumbItems = undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  if (aioData.product) items.push({ type: 'Product', data: aioData.product });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// Template 自主決定的圖片（不從 yml 讀取）
// ============================================================================

// Hero Banner
const heroAsset = await getAssetById('bn1209_scaled');
const heroMobileAsset = await getAssetById('bn_solutions_m');

// Service Flow Image
const flowImageAsset = await getAssetById('img_1');

// 產品卡片圖片映射（根據 card id 對應圖片）
const cardImages: Record<string, any> = {
  // 資安評估
  securityscorecard: await getAssetById('securityscorecard_card'),
  // 資安檢測
  tenablenessus: await getAssetById('tenablenessus_card'),
  sonarqube: await getAssetById('sonarqube_card'),
  acunetix: await getAssetById('acunetix_card'),
  // 資安防禦
  paloalto: await getAssetById('paloalto_card'),
  fortinet: await getAssetById('fortinet_card'),
  deepinstinct: await getAssetById('deepinstinct_card'),
  bitdefender: await getAssetById('bitdefender_card'),
  // 資安強化
  ist: await getAssetById('ist_card'),
  array: await getAssetById('array_card'),
  logsec: await getAssetById('logsec_card'),
  vicariusvrx: await getAssetById('vicariusvrx_card'),
};

// ============================================================================
// 硬編碼內容
// ============================================================================
const introData = SOLUTION_CONTENT.intro;
const sectionsData = SOLUTION_CONTENT.sections;

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroMobileAsset?.variants.mobile || heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="solution-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION - 全幅大圖 -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          {heroMobileAsset && (
            <source media="(max-width: 767px)" srcset={heroMobileAsset.variants.mobile} />
          )}
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. INTRO SECTION - 服務介紹 -->
    <!-- ================================================================== -->
    {introData && (
      <section class="intro-section fade-in-section">
        <div class="container">
          {introData.label && (
            <span class="intro-label">{introData.label}</span>
          )}
          <h1 class="intro-title">{introData.title}</h1>
          <div class="intro-description" set:html={introData.description} />
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 3. FLOW IMAGE - 服務流程圖 -->
    <!-- ================================================================== -->
    {flowImageAsset && (
      <section class="flow-section fade-in-section">
        <div class="container-wide">
          <picture class="flow-picture">
            <source media="(min-width: 768px)" srcset={flowImageAsset.variants.desktop} />
            <source media="(max-width: 767px)" srcset={flowImageAsset.variants.mobile} />
            <img
              src={flowImageAsset.variants.desktop}
              alt={flowImageAsset.alt}
              class="flow-image"
              loading="lazy"
              decoding="async"
            />
          </picture>
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 4. SERVICE SECTIONS - 服務區塊（anchor + cards） -->
    <!-- ================================================================== -->
    {sectionsData.map((section: any) => (
      <section class="service-section fade-in-section" id={section.id}>
        <div class="container-wide">
          <header class="service-header">
            <h2 class="service-title">{section.title}</h2>
            <p class="service-description">{section.description}</p>
          </header>

          {section.cards && section.cards.length > 0 && (
            <div class="card-grid">
              {section.cards.map((card: any) => {
                const cardImage = cardImages[card.id];
                return (
                  <a href={card.link} class="card">
                    {cardImage && (
                      <div class="card-image">
                        <img
                          src={cardImage.variants.desktop}
                          alt={cardImage.alt}
                          loading="lazy"
                          decoding="async"
                        />
                      </div>
                    )}
                    <div class="card-content">
                      <h3 class="card-title">{card.title}</h3>
                      <p class="card-description">{card.description}</p>
                      <span class="card-link">{card.link_text} →</span>
                    </div>
                  </a>
                );
              })}
            </div>
          )}
        </div>
      </section>
    ))}
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like 科技風樣式 - Solution Template
     ======================================== */

  .solution-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }

  .container-wide {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 50vw;
    max-height: 500px;
    min-height: 280px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Intro Section
     ---------------------------------------- */
  .intro-section {
    padding: 80px 0 48px;
  }

  .intro-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .intro-title {
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 600;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0 0 24px;
  }

  .intro-description {
    font-size: 17px;
    line-height: 1.8;
    color: var(--text-secondary);
    max-width: 800px;
    margin: 0 auto;
  }

  /* ----------------------------------------
     Flow Section
     ---------------------------------------- */
  .flow-section {
    padding: 0 0 64px;
  }

  .flow-picture {
    display: block;
    width: 100%;
  }

  .flow-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  /* ----------------------------------------
     Service Section
     ---------------------------------------- */
  .service-section {
    padding: 64px 0;
    border-top: 1px solid var(--border-color);
  }

  .service-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .service-title {
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .service-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* ----------------------------------------
     Card Grid
     ---------------------------------------- */
  .card-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 24px;
  }

  @media (min-width: 640px) {
    .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .card-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* ----------------------------------------
     Cards
     ---------------------------------------- */
  .card {
    display: flex;
    flex-direction: column;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .card-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 8px;
  }

  .card-description {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0 0 12px;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-link {
    font-size: 14px;
    font-weight: 500;
    color: var(--accent);
    transition: color 0.2s ease;
  }

  .card:hover .card-link {
    color: var(--accent-hover, var(--accent));
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode Support
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }

  :global(.dark) .card {
    background: var(--bg-secondary);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
