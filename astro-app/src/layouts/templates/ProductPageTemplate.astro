---
/**
 * ProductPageTemplate.astro
 *
 * 產品頁面 Template（Apple-like 科技風）
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/products.ts 載入）
 *
 * 固定佈局：
 * 1. Hero Banner（全幅大圖）
 * 2. Product Intro（產品介紹）
 * 3. Feature Showcase（功能展示，左右交錯）
 * 4. CTA（行動呼籲）
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { getProductContent } from './content/products';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// 根據 page.slug 取得硬編碼內容
const productContent = getProductContent(page.slug);

// Breadcrumb - 讓組件根據 URL 自動生成（符合佈局分離原則）
const breadcrumbItems = undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  if (aioData.product) items.push({ type: 'Product', data: aioData.product });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// Template 根據硬編碼內容中的 image_id 取得圖片
// ============================================================================

// Hero Banner
const heroImageId = productContent?.hero?.image_id;
const heroAsset = heroImageId ? await getAssetById(heroImageId) : null;

// Intro 資料
const introData = productContent?.intro;

// Features - 解析每個 feature 的 image_id
const featuresRaw = productContent?.features || [];
const featuresWithImages = await Promise.all(
  featuresRaw.map(async (feature) => {
    const asset = feature.image_id ? await getAssetById(feature.image_id) : null;
    return {
      ...feature,
      image: asset ? {
        desktop: asset.variants.desktop,
        mobile: asset.variants.mobile,
        alt: asset.alt
      } : null
    };
  })
);

// CTA 資料
const ctaData = productContent?.cta;

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="product-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION - 全幅大圖 -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          <source media="(max-width: 767px)" srcset={heroAsset.variants.mobile} />
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. PRODUCT INTRO - 產品介紹 -->
    <!-- ================================================================== -->
    {introData && (
      <section class="intro-section fade-in-section">
        <div class="container">
          {introData.label && (
            <span class="intro-label">{introData.label}</span>
          )}
          <h1 class="intro-title">{introData.title}</h1>
          <div class="intro-description" set:html={introData.description} />
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 3. FEATURE SHOWCASE - 功能展示（左右交錯） -->
    <!-- ================================================================== -->
    {featuresWithImages.length > 0 && (
      <section class="features-section">
        {featuresWithImages.map((feature, index) => (
          <article
            class:list={[
              'feature-item fade-in-section',
              index % 2 === 1 && 'feature-item--reversed'
            ]}
            data-feature-id={feature.id}
          >
            {feature.image && (
              <div class="feature-image-wrapper">
                <picture class="feature-picture">
                  <source media="(min-width: 768px)" srcset={feature.image.desktop} />
                  <source media="(max-width: 767px)" srcset={feature.image.mobile} />
                  <img
                    src={feature.image.desktop}
                    alt={feature.image.alt}
                    class="feature-image"
                    loading="lazy"
                    decoding="async"
                  />
                </picture>
              </div>
            )}
            <div class="feature-content">
              <h2 class="feature-title">{feature.title}</h2>
              <p class="feature-description">{feature.description}</p>
              {feature.bullets && feature.bullets.length > 0 && (
                <ul class="feature-bullets">
                  {feature.bullets.map((bullet: string) => (
                    <li class="feature-bullet">{bullet}</li>
                  ))}
                </ul>
              )}
            </div>
          </article>
        ))}
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 4. CTA SECTION - 行動呼籲 -->
    <!-- ================================================================== -->
    {ctaData && (
      <section class="cta-section fade-in-section">
        <div class="container">
          <h2 class="cta-title">{ctaData.title}</h2>
          {ctaData.description && (
            <p class="cta-description">{ctaData.description}</p>
          )}
          <a href={ctaData.button_link} class="cta-button">
            {ctaData.button_text}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like 科技風樣式
     ======================================== */

  .product-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 980px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 56.25vw;
    max-height: 600px;
    min-height: 300px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Intro Section
     ---------------------------------------- */
  .intro-section {
    padding: 80px 0;
    text-align: center;
  }

  .intro-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .intro-title {
    font-size: clamp(28px, 5vw, 48px);
    font-weight: 600;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .intro-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    max-width: 680px;
    margin: 0 auto;
    white-space: pre-line;
  }

  /* ----------------------------------------
     Features Section
     ---------------------------------------- */
  .features-section {
    padding: 40px 0;
  }

  .feature-item {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 60px 24px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }

  @media (min-width: 768px) {
    .feature-item {
      grid-template-columns: 1fr 1fr;
      gap: 80px;
      padding: 100px 48px;
    }

    .feature-item--reversed {
      direction: rtl;
    }

    .feature-item--reversed > * {
      direction: ltr;
    }
  }

  .feature-image-wrapper {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: var(--bg-tertiary);
    aspect-ratio: 4 / 3;
  }

  .feature-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .feature-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .feature-item:hover .feature-image {
    transform: scale(1.02);
  }

  .feature-content {
    padding: 0;
  }

  .feature-title {
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .feature-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--text-secondary);
    margin: 0;
    white-space: pre-line;
  }

  .feature-bullets {
    list-style: none;
    margin: 24px 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature-bullet {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 15px;
    color: var(--text-primary);
  }

  .feature-bullet::before {
    content: '';
    flex-shrink: 0;
    width: 6px;
    height: 6px;
    margin-top: 8px;
    background: var(--accent);
    border-radius: 50%;
  }

  /* ----------------------------------------
     CTA Section
     ---------------------------------------- */
  .cta-section {
    padding: 100px 0;
    text-align: center;
    background: var(--bg-secondary);
  }

  .cta-title {
    font-size: clamp(24px, 4vw, 40px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover, var(--accent));
    transform: scale(1.02);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode Support
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }

  :global(.dark) .cta-section {
    background: var(--bg-tertiary);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
