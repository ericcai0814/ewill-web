---
/**
 * EventPageTemplate.astro
 *
 * 活動頁面 Template
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/event.ts 載入）
 *
 * 支援兩種模式：
 * - list: 活動列表頁（slug === 'event_information'）
 * - detail: 單一活動頁（根據 slug 顯示對應活動）
 *
 * 固定佈局：
 * 1. Hero Banner - banner1209 (desktop) / bn_home_m (mobile)
 * 2. Event Content / Card List
 * 3. Gallery（如有）
 * 4. CTA（如有）
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { EVENT_LIST_CONTENT, EVENT_DETAIL_CONTENT, EVENT_IMAGES } from './content/event';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// Breadcrumb - 讓組件根據 URL 自動生成（符合佈局分離原則）
const breadcrumbItems = undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  if (aioData.event) items.push({ type: 'Event', data: aioData.event });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// 判斷模式（根據 slug）
// ============================================================================
const isListMode = page.slug === 'event_information';
const eventDetail = !isListMode ? EVENT_DETAIL_CONTENT[page.slug] : null;

// ============================================================================
// Template 自主決定的圖片（不從 yml 讀取）
// ============================================================================

// Hero Banner
const heroAsset = await getAssetById('banner1209');
const heroMobileAsset = await getAssetById('bn_home_m');

// Event Card 圖片映射（根據 card id 對應圖片）
const eventCardImages: Record<string, any> = {
  event_passwordless: await getAssetById('event_info_passwordless'),
  event_logsec: await getAssetById('event_info_news_m'),
  event_smartmfg: await getAssetById('event_info_smartmfg'),
  event_proxmox: await getAssetById('event_info_photo_1'),
};

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroMobileAsset?.variants.mobile || heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();

// ============================================================================
// 硬編碼內容
// ============================================================================
const cardListData = isListMode ? EVENT_LIST_CONTENT.card_list : null;
const textSections = eventDetail?.sections || [];
const galleryData = eventDetail?.images?.gallery;
const ctaData = null; // 活動頁不需要 CTA
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="event-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          {heroMobileAsset && (
            <source media="(max-width: 767px)" srcset={heroMobileAsset.variants.mobile} />
          )}
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. CONTENT HEADER -->
    <!-- ================================================================== -->
    <article class="content-section fade-in-section">
      <div class="container">
        <header class="content-header">
          <h1 class="content-title">{seo.title.split('|')[0].trim()}</h1>
          {seo.description && (
            <p class="content-lead">{seo.description}</p>
          )}
        </header>
      </div>
    </article>

    <!-- ================================================================== -->
    <!-- 2a. LIST MODE - 活動卡片列表 -->
    <!-- ================================================================== -->
    {isListMode && cardListData && (
      <section class="card-section fade-in-section">
        <div class="container">
          {cardListData.label && (
            <span class="section-label">{cardListData.label}</span>
          )}
          {cardListData.title && (
            <h2 class="section-title">{cardListData.title}</h2>
          )}
        </div>
        <div class="card-grid columns-3">
          {cardListData.items?.map((item: any) => {
            const image = eventCardImages[item.id];
            return (
              <a href={item.link} class="card">
                {image && (
                  <div class="card-image">
                    <img
                      src={image.variants.desktop}
                      alt={image.alt}
                      loading="lazy"
                      decoding="async"
                    />
                  </div>
                )}
                <div class="card-content">
                  <span class="card-category">{item.title}</span>
                  <p class="card-description">{item.description}</p>
                  <span class="card-link">{item.link_text} →</span>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2b. DETAIL MODE - 活動內容 -->
    <!-- ================================================================== -->
    {!isListMode && textSections.length > 0 && (
      <div class="content-body fade-in-section">
        <div class="container">
          {textSections.map((section: any) => (
            <div class="text-block" set:html={section.content} />
          ))}
        </div>
      </div>
    )}

    <!-- ================================================================== -->
    <!-- 3. CTA SECTION -->
    <!-- ================================================================== -->
    {ctaData && (
      <section class="cta-section fade-in-section">
        <div class="container">
          <h2 class="cta-title">{ctaData.title}</h2>
          {ctaData.description && (
            <p class="cta-description">{ctaData.description}</p>
          )}
          <a href={ctaData.button_link} class="cta-button">
            {ctaData.button_text}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like Design - Event Template
     ======================================== */

  .event-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 50vw;
    max-height: 500px;
    min-height: 280px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Content Section
     ---------------------------------------- */
  .content-section {
    padding: 64px 0 32px;
  }

  .content-header {
    margin-bottom: 32px;
  }

  .content-title {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .content-lead {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
    max-width: 700px;
    margin: 0 auto;
  }

  .content-body {
    padding: 0 0 64px;
  }

  .content-body .container {
    text-align: left;
  }

  .text-block {
    font-size: 17px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

  /* ----------------------------------------
     Section Labels
     ---------------------------------------- */
  .section-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 40px;
  }

  /* ----------------------------------------
     Card Section
     ---------------------------------------- */
  .card-section {
    padding: 0 0 80px;
  }

  .card-grid {
    display: grid;
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .card-grid.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  @media (max-width: 1024px) {
    .card-grid.columns-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .card-grid.columns-3 {
      grid-template-columns: 1fr;
    }
  }

  /* ----------------------------------------
     Cards
     ---------------------------------------- */
  .card {
    display: flex;
    flex-direction: column;
    background: var(--bg-primary);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .card-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 24px;
    flex: 1;
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .card-category {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 12px;
  }

  .card-description {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0 0 16px;
    flex: 1;
  }

  .card-link {
    font-size: 14px;
    font-weight: 500;
    color: var(--accent);
    transition: color 0.2s ease;
  }

  .card:hover .card-link {
    color: var(--accent-hover, var(--accent));
  }

  /* ----------------------------------------
     CTA Section
     ---------------------------------------- */
  .cta-section {
    padding: 80px 0;
    text-align: center;
    background: var(--bg-tertiary);
  }

  .cta-title {
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover, var(--accent));
    transform: scale(1.02);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }

  :global(.dark) .card {
    background: var(--bg-secondary);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
