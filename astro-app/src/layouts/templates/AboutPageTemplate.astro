---
/**
 * AboutPageTemplate.astro
 *
 * 關於我們頁面 Template
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/about.ts 載入）
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { ABOUT_CONTENT } from './content/about';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// Breadcrumb
const breadcrumbItems = aio?.webpage?.breadcrumb?.itemListElement?.map((item: { name: string; item?: string }) => ({
  label: item.name,
  href: item.item
    ? (item.item.startsWith('http') ? new URL(item.item).pathname : item.item)
    : ''
})) || undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// Template 自主決定的圖片
// ============================================================================
const heroAsset = await getAssetById('banner1209');
const heroMobileAsset = await getAssetById('bn_home_m');

// ============================================================================
// 硬編碼內容
// ============================================================================
const introData = ABOUT_CONTENT.intro;
const coreValues = ABOUT_CONTENT.core_values;
const certifications = ABOUT_CONTENT.certifications;

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroMobileAsset?.variants.mobile || heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();

// Icons for core values
const valueIcons = [
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`,
  `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>`,
];
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="about-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          {heroMobileAsset && (
            <source media="(max-width: 767px)" srcset={heroMobileAsset.variants.mobile} />
          )}
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. COMPANY INTRO -->
    <!-- ================================================================== -->
    <section class="intro-section fade-in-section">
      <div class="container">
        <span class="intro-label">{introData.label}</span>
        <h1 class="intro-title">{introData.title}</h1>
        <div class="intro-content" set:html={introData.description} />
      </div>
    </section>

    <!-- ================================================================== -->
    <!-- 3. CORE VALUES -->
    <!-- ================================================================== -->
    <section class="values-section fade-in-section">
      <div class="container-wide">
        <h2 class="section-title">核心價值</h2>
        <div class="values-grid">
          {coreValues.map((value, index) => (
            <article class="value-card">
              <div class="value-icon" set:html={valueIcons[index % valueIcons.length]} />
              <h3 class="value-title">{value.name}</h3>
              <p class="value-description">{value.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- ================================================================== -->
    <!-- 4. CERTIFICATIONS -->
    <!-- ================================================================== -->
    <section class="certifications-section fade-in-section">
      <div class="container-wide">
        <h2 class="section-title">專業認證</h2>
        <div class="certifications-grid">
          {certifications.map((cert) => (
            <article class="certification-card">
              <div class="cert-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                </svg>
              </div>
              <h3 class="cert-name">{cert.name}</h3>
              <p class="cert-issuer">{cert.issuer}</p>
              {cert.level && <span class="cert-level">{cert.level}</span>}
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- ================================================================== -->
    <!-- 5. CTA SECTION -->
    <!-- ================================================================== -->
    <section class="cta-section fade-in-section">
      <div class="container">
        <h2 class="cta-title">開始您的數位轉型之旅</h2>
        <p class="cta-description">讓專業顧問協助您評估企業需求，規劃最適合的解決方案</p>
        <a href="/contact/" class="cta-button">
          聯繫我們
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like 科技風樣式 - About Template
     ======================================== */

  .about-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .container-wide {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .section-title {
    font-size: clamp(28px, 4vw, 40px);
    font-weight: 600;
    text-align: center;
    color: var(--text-primary);
    margin: 0 0 48px;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 50vw;
    max-height: 500px;
    min-height: 280px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 40%, rgba(0,0,0,0.4) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Intro Section
     ---------------------------------------- */
  .intro-section {
    padding: 80px 0;
    text-align: center;
  }

  .intro-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .intro-title {
    font-size: clamp(32px, 5vw, 52px);
    font-weight: 600;
    line-height: 1.1;
    color: var(--text-primary);
    margin: 0 0 24px;
  }

  .intro-content {
    font-size: 18px;
    line-height: 1.8;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* ----------------------------------------
     Values Section
     ---------------------------------------- */
  .values-section {
    padding: 80px 0;
    background: var(--bg-secondary);
  }

  .values-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 640px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .value-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 32px 24px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }

  .value-icon {
    width: 56px;
    height: 56px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent);
    border-radius: 14px;
    color: white;
  }

  .value-icon :global(svg) {
    width: 28px;
    height: 28px;
  }

  .value-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 12px;
  }

  .value-description {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
  }

  /* ----------------------------------------
     Certifications Section
     ---------------------------------------- */
  .certifications-section {
    padding: 80px 0;
  }

  .certifications-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  @media (min-width: 640px) {
    .certifications-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .certifications-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .certification-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .certification-card:hover {
    border-color: var(--accent);
  }

  .cert-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 16px;
    color: var(--accent);
  }

  .cert-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .cert-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 8px;
  }

  .cert-issuer {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0 0 8px;
  }

  .cert-level {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    color: var(--accent);
    background: var(--accent-light, rgba(var(--accent-rgb), 0.1));
    padding: 4px 12px;
    border-radius: 100px;
  }

  /* ----------------------------------------
     CTA Section
     ---------------------------------------- */
  .cta-section {
    padding: 100px 0;
    text-align: center;
    background: var(--bg-tertiary);
  }

  .cta-title {
    font-size: clamp(24px, 4vw, 40px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover, var(--accent));
    transform: scale(1.02);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode Support
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 40%, rgba(0,0,0,0.6) 100%);
  }

  :global(.dark) .value-card {
    background: var(--bg-tertiary);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
