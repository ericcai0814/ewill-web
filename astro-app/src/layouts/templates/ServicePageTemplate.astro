---
/**
 * ServicePageTemplate.astro
 *
 * 服務項目頁面 Template
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/service.ts 載入）
 *
 * 固定佈局：
 * 1. Hero Banner - hero_services
 * 2. Software Development Section (SSDLC + V-Model)
 * 3. Security Services Section
 * 4. System Planning Section (Cards)
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { SERVICE_CONTENT } from './content/service';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// Breadcrumb
const breadcrumbItems = aio?.webpage?.breadcrumb?.itemListElement?.map((item: { name: string; item?: string }) => ({
  label: item.name,
  href: item.item
    ? (item.item.startsWith('http') ? new URL(item.item).pathname : item.item)
    : ''
})) || undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// Template 自主決定的圖片（不從 yml 讀取）
// ============================================================================

// Hero Banner
const heroAsset = await getAssetById('hero_services');
const heroMobileAsset = await getAssetById('hero_services_mobile');

// Software Development 圖片
const ssdlcImage = await getAssetById('service_offer_1');
const vmodelImage = await getAssetById('service_offer_2');

// Security Services 圖片
const securityFlowDesktop = await getAssetById('services_flow');
const securityFlowMobile = await getAssetById('services_flow_mobile');

// System Planning 卡片圖片
const systemImages: Record<string, any> = {
  ubuntu: await getAssetById('card_ubuntu'),
  vmware: await getAssetById('card_vmware'),
  proxmox: await getAssetById('card_proxmox'),
};

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroMobileAsset?.variants.mobile || heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();

// ============================================================================
// 硬編碼內容
// ============================================================================
const softwareDev = SERVICE_CONTENT.software_development;
const securitySvc = SERVICE_CONTENT.security_services;
const systemPlan = SERVICE_CONTENT.system_planning;
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="service-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          {heroMobileAsset && (
            <source media="(max-width: 767px)" srcset={heroMobileAsset.variants.mobile} />
          )}
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. SOFTWARE DEVELOPMENT SECTION -->
    <!-- ================================================================== -->
    {softwareDev && (
      <section id={softwareDev.id} class="content-section fade-in-section">
        <div class="container">
          {softwareDev.label && (
            <span class="section-label">{softwareDev.label}</span>
          )}
          <h1 class="section-title">{softwareDev.title}</h1>
          <p class="section-text">{softwareDev.text}</p>
        </div>

        <!-- SSDLC -->
        {softwareDev.ssdlc && (
          <div id={softwareDev.ssdlc.id} class="subsection">
            <div class="container">
              {softwareDev.ssdlc.label && (
                <span class="subsection-label">{softwareDev.ssdlc.label}</span>
              )}
              <h2 class="subsection-title">{softwareDev.ssdlc.title}</h2>
              <p class="section-text">{softwareDev.ssdlc.text}</p>
            </div>
            {ssdlcImage && (
              <div class="section-image">
                <img
                  src={ssdlcImage.variants.desktop}
                  alt={ssdlcImage.alt}
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}
          </div>
        )}

        <!-- V-Model -->
        {softwareDev.vmodel && (
          <div id={softwareDev.vmodel.id} class="subsection">
            <div class="container">
              {softwareDev.vmodel.label && (
                <span class="subsection-label">{softwareDev.vmodel.label}</span>
              )}
              <h2 class="subsection-title">{softwareDev.vmodel.title}</h2>
              <p class="section-text">{softwareDev.vmodel.text}</p>
            </div>
            {vmodelImage && (
              <div class="section-image">
                <img
                  src={vmodelImage.variants.desktop}
                  alt={vmodelImage.alt}
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}
          </div>
        )}
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 3. SECURITY SERVICES SECTION -->
    <!-- ================================================================== -->
    {securitySvc && (
      <section id={securitySvc.id} class="content-section alt-bg fade-in-section">
        <div class="container">
          {securitySvc.label && (
            <span class="section-label">{securitySvc.label}</span>
          )}
          <h2 class="section-title">{securitySvc.title}</h2>
          <p class="section-text">{securitySvc.text}</p>

          {securitySvc.subtitle && (
            <h3 class="subsection-title">{securitySvc.subtitle}</h3>
          )}
          {securitySvc.subtitle_text && (
            <p class="section-text">{securitySvc.subtitle_text}</p>
          )}
        </div>

        {(securityFlowDesktop || securityFlowMobile) && (
          <div class="section-image">
            <picture>
              {securityFlowDesktop && (
                <source media="(min-width: 768px)" srcset={securityFlowDesktop.variants.desktop} />
              )}
              {securityFlowMobile && (
                <source media="(max-width: 767px)" srcset={securityFlowMobile.variants.mobile} />
              )}
              <img
                src={securityFlowDesktop?.variants.desktop || securityFlowMobile?.variants.mobile}
                alt={securityFlowDesktop?.alt || securityFlowMobile?.alt || ''}
                loading="lazy"
                decoding="async"
              />
            </picture>
          </div>
        )}

        {securitySvc.cta && (
          <div class="cta-container">
            <a href={securitySvc.cta.button_link} class="cta-button secondary">
              {securitySvc.cta.button_text}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        )}
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 4. SYSTEM PLANNING SECTION -->
    <!-- ================================================================== -->
    {systemPlan && (
      <section id={systemPlan.id} class="content-section fade-in-section">
        <div class="container">
          {systemPlan.label && (
            <span class="section-label">{systemPlan.label}</span>
          )}
          <h2 class="section-title">{systemPlan.title}</h2>
          <p class="section-text">{systemPlan.text}</p>
        </div>

        {systemPlan.items && (
          <div class="card-grid columns-3">
            {systemPlan.items.map((item: any) => {
              const image = systemImages[item.id];
              return (
                <a href={item.link} class="card">
                  {image && (
                    <div class="card-image">
                      <img
                        src={image.variants.desktop}
                        alt={image.alt}
                        loading="lazy"
                        decoding="async"
                      />
                    </div>
                  )}
                  <div class="card-content">
                    <h3 class="card-title">{item.title}</h3>
                    <p class="card-description">{item.description}</p>
                    <span class="card-link">{item.link_text} →</span>
                  </div>
                </a>
              );
            })}
          </div>
        )}
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like Design - Service Template
     ======================================== */

  .service-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 50vw;
    max-height: 500px;
    min-height: 280px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Content Sections
     ---------------------------------------- */
  .content-section {
    padding: 80px 0;
  }

  .content-section.alt-bg {
    background: var(--bg-secondary);
  }

  .section-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 24px;
  }

  .section-text {
    font-size: 17px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin: 0 auto 40px;
    max-width: 700px;
  }

  /* Subsection */
  .subsection {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--border-color);
  }

  .subsection-label {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-tertiary);
    margin-bottom: 12px;
  }

  .subsection-title {
    font-size: clamp(22px, 4vw, 32px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 20px;
  }

  /* Section Image */
  .section-image {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .section-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  /* CTA */
  .cta-container {
    margin-top: 40px;
    text-align: center;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button.secondary {
    background: var(--text-secondary);
  }

  .cta-button:hover {
    transform: scale(1.02);
    opacity: 0.9;
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Card Grid
     ---------------------------------------- */
  .card-grid {
    display: grid;
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .card-grid.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  @media (max-width: 1024px) {
    .card-grid.columns-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .card-grid.columns-3 {
      grid-template-columns: 1fr;
    }
  }

  /* ----------------------------------------
     Cards
     ---------------------------------------- */
  .card {
    display: flex;
    flex-direction: column;
    background: var(--bg-primary);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .card-image {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 24px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 12px;
  }

  .card-description {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0 0 16px;
    flex: 1;
  }

  .card-link {
    font-size: 14px;
    font-weight: 500;
    color: var(--accent);
    transition: color 0.2s ease;
  }

  .card:hover .card-link {
    color: var(--accent-hover, var(--accent));
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }

  :global(.dark) .card {
    background: var(--bg-secondary);
  }

  :global(.dark) .subsection {
    border-top-color: var(--border-color);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
