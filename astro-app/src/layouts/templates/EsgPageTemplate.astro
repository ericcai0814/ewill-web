---
/**
 * EsgPageTemplate.astro
 *
 * ESG 永續發展頁面 Template
 *
 * 設計原則：
 * - 佈局完全由 Template 決定
 * - yml 只提供 seo 和 aio
 * - 內容由 Template 硬編碼（從 content/esg.ts 載入）
 *
 * 固定佈局：
 * 1. Hero Banner - bn_esg
 * 2. Intro Section - esg_1 (desktop) / esg_p1_fix (mobile)
 * 3. Focus Areas - esg_2 (desktop) / esg_p2_1, esg_p2_2, esg_p2_3 (mobile)
 * 4. Practice Section - esg_3 (desktop) / esg_p3 (mobile)
 * 5. CTA Section
 */
import Layout from '../Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { getAssetById } from '../../utils/content';
import type { PageContent, AioData } from '../../utils/content';
import type { JsonLdItem } from '../../components/SEO.astro';
import { ESG_CONTENT } from './content/esg';

export interface Props {
  page: PageContent;
}

const { page } = Astro.props;
const { seo, aio } = page;

// Breadcrumb
const breadcrumbItems = aio?.webpage?.breadcrumb?.itemListElement?.map((item: { name: string; item?: string }) => ({
  label: item.name,
  href: item.item
    ? (item.item.startsWith('http') ? new URL(item.item).pathname : item.item)
    : ''
})) || undefined;

// JSON-LD
function buildJsonLd(aioData: AioData | undefined): JsonLdItem[] {
  if (!aioData) return [];
  const items: JsonLdItem[] = [];
  if (aioData.webpage) items.push({ type: 'WebPage', data: aioData.webpage });
  if (aioData.service) items.push({ type: 'Service', data: aioData.service });
  if (aioData.faq && aioData.faq.length > 0) items.push({ type: 'FAQPage', data: { items: aioData.faq } });
  return items;
}

const jsonLdItems = buildJsonLd(aio);

// ============================================================================
// Template 自主決定的圖片（不從 yml 讀取）
// ============================================================================

// Hero Banner
const heroAsset = await getAssetById('bn_esg');

// Intro Section 圖片
const introDesktop = await getAssetById('esg_1');
const introMobile = await getAssetById('esg_p1_fix');

// Focus Areas 圖片
const focusDesktop = await getAssetById('esg_2');
const focusMobile1 = await getAssetById('esg_p2_1');
const focusMobile2 = await getAssetById('esg_p2_2');
const focusMobile3 = await getAssetById('esg_p2_3');

// Practice Section 圖片
const practiceDesktop = await getAssetById('esg_3');
const practiceMobile = await getAssetById('esg_p3');

// ============================================================================
// SEO / LCP / OG
// ============================================================================

const lcpImage = heroAsset ? {
  desktop: heroAsset.variants.desktop,
  mobile: heroAsset.variants.mobile
} : undefined;

const siteUrl = Astro.url.origin;
const DEFAULT_OG_IMAGE = '/assets/og-default.jpg';

function getOgImageUrl(): string {
  if (seo.og_image) {
    return seo.og_image.startsWith('http') ? seo.og_image : `${siteUrl}${seo.og_image}`;
  }
  if (heroAsset?.variants.desktop) {
    return `${siteUrl}${heroAsset.variants.desktop}`;
  }
  return `${siteUrl}${DEFAULT_OG_IMAGE}`;
}

const ogImage = getOgImageUrl();
---

<Layout
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
  jsonLd={jsonLdItems}
  lcpImage={lcpImage}
  ogImage={ogImage}
>
  <Header />

  <main class="esg-template">
    <Breadcrumb items={breadcrumbItems} />

    <!-- ================================================================== -->
    <!-- 1. HERO SECTION -->
    <!-- ================================================================== -->
    {heroAsset && (
      <section class="hero-section">
        <picture class="hero-picture">
          <source media="(min-width: 768px)" srcset={heroAsset.variants.desktop} />
          <source media="(max-width: 767px)" srcset={heroAsset.variants.mobile} />
          <img
            src={heroAsset.variants.desktop}
            alt={heroAsset.alt}
            class="hero-image"
            loading="eager"
            decoding="async"
          />
        </picture>
        <div class="hero-overlay"></div>
      </section>
    )}

    <!-- ================================================================== -->
    <!-- 2. INTRO SECTION - ESG 架構與目標 -->
    <!-- ================================================================== -->
    <section class="content-section fade-in-section">
      <div class="container">
        {ESG_CONTENT.intro.label && (
          <span class="section-label">{ESG_CONTENT.intro.label}</span>
        )}
        <h1 class="section-title">{ESG_CONTENT.intro.title}</h1>
        <p class="section-text">{ESG_CONTENT.intro.text}</p>
      </div>
      {introDesktop && (
        <div class="section-image">
          <picture>
            <source media="(min-width: 768px)" srcset={introDesktop.variants.desktop} />
            {introMobile && (
              <source media="(max-width: 767px)" srcset={introMobile.variants.mobile} />
            )}
            <img
              src={introDesktop.variants.desktop}
              alt={introDesktop.alt}
              loading="lazy"
              decoding="async"
            />
          </picture>
        </div>
      )}
    </section>

    <!-- ================================================================== -->
    <!-- 3. FOCUS AREAS SECTION - ESG 三大重點領域 -->
    <!-- ================================================================== -->
    <section class="content-section alt-bg fade-in-section">
      <div class="container">
        <h2 class="section-title">{ESG_CONTENT.focus_areas.title}</h2>
        <p class="section-text">{ESG_CONTENT.focus_areas.text}</p>
      </div>

      <!-- Desktop: 單張大圖 -->
      {focusDesktop && (
        <div class="section-image desktop-only">
          <img
            src={focusDesktop.variants.desktop}
            alt={focusDesktop.alt}
            loading="lazy"
            decoding="async"
          />
        </div>
      )}

      <!-- Mobile: 三張堆疊 -->
      <div class="section-image-stack mobile-only">
        {focusMobile1 && (
          <img src={focusMobile1.variants.mobile} alt={focusMobile1.alt} loading="lazy" />
        )}
        {focusMobile2 && (
          <img src={focusMobile2.variants.mobile} alt={focusMobile2.alt} loading="lazy" />
        )}
        {focusMobile3 && (
          <img src={focusMobile3.variants.mobile} alt={focusMobile3.alt} loading="lazy" />
        )}
      </div>
    </section>

    <!-- ================================================================== -->
    <!-- 4. PRACTICE SECTION - 鎰威科技的永續性實踐 -->
    <!-- ================================================================== -->
    <section class="content-section fade-in-section">
      <div class="container">
        <h2 class="section-title">{ESG_CONTENT.practice.title}</h2>
        <p class="section-text">{ESG_CONTENT.practice.text}</p>
      </div>
      {practiceDesktop && (
        <div class="section-image">
          <picture>
            <source media="(min-width: 768px)" srcset={practiceDesktop.variants.desktop} />
            {practiceMobile && (
              <source media="(max-width: 767px)" srcset={practiceMobile.variants.mobile} />
            )}
            <img
              src={practiceDesktop.variants.desktop}
              alt={practiceDesktop.alt}
              loading="lazy"
              decoding="async"
            />
          </picture>
        </div>
      )}
    </section>

    <!-- ================================================================== -->
    <!-- 5. CTA SECTION -->
    <!-- ================================================================== -->
    <section class="cta-section fade-in-section">
      <div class="container">
        <h2 class="cta-title">{ESG_CONTENT.cta.title}</h2>
        {ESG_CONTENT.cta.description && (
          <p class="cta-description">{ESG_CONTENT.cta.description}</p>
        )}
        <a href={ESG_CONTENT.cta.button_link} class="cta-button">
          {ESG_CONTENT.cta.button_text}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* ========================================
     Apple-like Design - ESG Template
     ======================================== */

  .esg-template {
    min-height: 100vh;
    padding-top: 64px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }

  /* ----------------------------------------
     Hero Section
     ---------------------------------------- */
  .hero-section {
    position: relative;
    width: 100%;
    height: 50vw;
    max-height: 500px;
    min-height: 280px;
    overflow: hidden;
    background: var(--bg-tertiary);
  }

  .hero-picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 100%);
    pointer-events: none;
  }

  /* ----------------------------------------
     Content Sections
     ---------------------------------------- */
  .content-section {
    padding: 80px 0 40px;
  }

  .content-section.alt-bg {
    background: var(--bg-secondary);
  }

  .section-label {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(28px, 5vw, 42px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 24px;
  }

  .section-text {
    font-size: 17px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin: 0 auto 40px;
    max-width: 700px;
  }

  .section-image {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .section-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .section-image-stack {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 0 24px;
  }

  .section-image-stack img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  /* Responsive visibility */
  .desktop-only {
    display: block;
  }

  .mobile-only {
    display: none;
  }

  @media (max-width: 767px) {
    .desktop-only {
      display: none;
    }

    .mobile-only {
      display: flex;
    }
  }

  /* ----------------------------------------
     CTA Section
     ---------------------------------------- */
  .cta-section {
    padding: 100px 0;
    text-align: center;
    background: var(--bg-tertiary);
  }

  .cta-title {
    font-size: clamp(24px, 4vw, 36px);
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    margin: 0 0 16px;
  }

  .cta-description {
    font-size: 17px;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    font-size: 17px;
    font-weight: 500;
    color: white;
    background: var(--accent);
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: var(--accent-hover, var(--accent));
    transform: scale(1.02);
  }

  .cta-button svg {
    transition: transform 0.3s ease;
  }

  .cta-button:hover svg {
    transform: translateX(4px);
  }

  /* ----------------------------------------
     Fade-in Animation
     ---------------------------------------- */
  .fade-in-section {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .fade-in-section.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* ----------------------------------------
     Dark Mode
     ---------------------------------------- */
  :global(.dark) .hero-overlay {
    background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.5) 100%);
  }
</style>

<script>
  // Intersection Observer for fade-in animation
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-section');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    fadeElements.forEach((el) => observer.observe(el));
  });
</script>
